@model API.DTOs.Accounts.RegisterDto

@{
    ViewData["Title"] = "Register";
    Layout = "_RegisterLayout";
}
<div class="row">
    <div class="col-md-12">
        <form action="Register" method="post" class="mb-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="FirstName" class="control-label form-label"></label>
                <input asp-for="FirstName" class="form-control" type="text" placeholder="Enter your first name" autofocus/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="LastName" class="control-label form-label"></label>
                <input asp-for="LastName" class="form-control" type="text" placeholder="Enter your last name" autofocus />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label form-label"></label>
                <input asp-for="Email" class="form-control" type="text" placeholder="Enter your email" autofocus/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="BirthDate" class="control-label form-label"></label>
                <input asp-for="BirthDate" class="form-control" type="text" placeholder="Enter your birth date" autofocus/>
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PhoneNumber" class="control-label form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" type="text" placeholder="Enter your phone number" autofocus/>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Gender" class="control-label form-label"></label>
                <select asp-for="Gender" class="form-select" aria-label="Default select example">
                                  <option selected>Select gender</option>
                                  <option value="0">Female</option>
                                  <option value="1">Male</option>
                                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="HiringDate" class="control-label form-label"></label>
                <input asp-for="HiringDate" class="form-control" type="text" placeholder="Enter your hiring date" autofocus />
                <span asp-validation-for="HiringDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Degree" class="control-label form-label"></label>
                <input asp-for="Degree" class="form-control" type="text" placeholder="Enter your degree" autofocus />
                <span asp-validation-for="Degree" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Major" class="control-label form-label"></label>
                <input asp-for="Major" class="form-control" type="text" placeholder="Enter your major" autofocus/>
                <span asp-validation-for="Major" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Gpa" class="control-label form-label"></label>
                <input asp-for="Gpa" class="form-control" type="text" placeholder="Enter your GPA" autofocus/>
                <span asp-validation-for="Gpa" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="UniversityCode" class="control-label form-label"></label>
                <input asp-for="UniversityCode" class="form-control" type="text" placeholder="Enter your university code" autofocus/>
                <span asp-validation-for="UniversityCode" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="UniversityName" class="control-label form-label"></label>
                <input asp-for="UniversityName" class="form-control" type="text" placeholder="Enter your university name" autofocus/>
                <span asp-validation-for="UniversityName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 form-password-toggle">
                <div class="d-flex justify-content-between">
                    <label asp-for="Password" class="control-label form-label"></label>
                </div>
                <div class="input-group input-group-merge">
                    <input asp-for="Password" class="form-control" type="password" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                </div>
            </div>
            <div class="form-group mb-3 form-password-toggle">
                <div class="d-flex justify-content-between">
                    <label asp-for="ConfirmPassword" class="control-label form-label"></label>
                </div>
                <div class="input-group input-group-merge">
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password"/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                </div>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary d-grid w-100" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
